<Application x:Class="EnvironmentSpanner.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:EnvironmentSpanner"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources />
                <ui:XamlControlsResources />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Application Icon -->
            <DrawingImage x:Key="AppIcon">
                <DrawingImage.Drawing>
                    <DrawingGroup>
                        <!-- Background circle with gradient -->
                        <GeometryDrawing>
                            <GeometryDrawing.Brush>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#5BA3F5" Offset="0"/>
                                    <GradientStop Color="#2E7CD6" Offset="1"/>
                                </LinearGradientBrush>
                            </GeometryDrawing.Brush>
                            <GeometryDrawing.Geometry>
                                <EllipseGeometry Center="64,64" RadiusX="58" RadiusY="58"/>
                            </GeometryDrawing.Geometry>
                        </GeometryDrawing>
                        
                        <!-- Variable symbol (curly braces) in white -->
                        <GeometryDrawing Brush="White">
                            <GeometryDrawing.Geometry>
                                <PathGeometry>
                                    <!-- Left brace -->
                                    <PathFigure StartPoint="35,50">
                                        <BezierSegment Point1="30,50" Point2="25,55" Point3="25,64"/>
                                        <BezierSegment Point1="25,73" Point2="30,78" Point3="35,78"/>
                                    </PathFigure>
                                    <!-- Right brace -->
                                    <PathFigure StartPoint="93,50">
                                        <BezierSegment Point1="98,50" Point2="103,55" Point3="103,64"/>
                                        <BezierSegment Point1="103,73" Point2="98,78" Point3="93,78"/>
                                    </PathFigure>
                                    <!-- Center equals sign representing variables -->
                                    <PathFigure StartPoint="50,60">
                                        <LineSegment Point="78,60"/>
                                    </PathFigure>
                                    <PathFigure StartPoint="50,68">
                                        <LineSegment Point="78,68"/>
                                    </PathFigure>
                                </PathGeometry>
                            </GeometryDrawing.Geometry>
                        </GeometryDrawing>
                    </DrawingGroup>
                </DrawingImage.Drawing>
            </DrawingImage>
            
            <!-- Inverse Boolean Converter -->
            <local:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
            
            <!-- Boolean to Visibility Converter -->
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
